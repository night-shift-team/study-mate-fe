#!/bin/sh

# Get staged files
STAGED_FILES=$(git diff --cached --name-only --diff-filter=d)

# If there are any staged files, check formatting
if [ -n "$STAGED_FILES" ]; then
  echo "Checking formatting on staged files..."
  
  # Check formatting without modifying files
  pnpm format --write $STAGED_FILES
  
  # If formatting check fails, exit with error
  if [ $? -ne 0 ]; then
    echo "❌ Formatting check failed. Please run 'pnpm format --write' to fix formatting issues."
    exit 1
  fi
  
  echo "✅ All staged files are properly formatted."
fi

exit 0